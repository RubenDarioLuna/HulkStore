<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                      http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="hulkstore" transaction-type="JTA">
        <class>com.hulkstore.common.entities.Brand</class>
        <class>com.hulkstore.common.entities.Character</class>
        <class>com.hulkstore.common.entities.ClothesType</class>
        <class>com.hulkstore.common.entities.CrockeryType</class>
        <class>com.hulkstore.common.entities.Customer</class>
        <class>com.hulkstore.common.entities.Order</class>
        <class>com.hulkstore.common.entities.OrderProduct</class>
        <class>com.hulkstore.common.entities.Output</class>
        <class>com.hulkstore.common.entities.Product</class>
        <class>com.hulkstore.common.entities.ProductType</class>
        <class>com.hulkstore.common.entities.Stock</class>
        <class>com.hulkstore.common.entities.Theme</class>
        <class>com.hulkstore.common.entities.ToyType</class>
        <class>com.hulkstore.common.entities.User</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
            <property name="javax.persistence.jdbc.url"    value="jdbc:h2:mem:test" />
            <property name="javax.persistence.jdbc.user" value="sa" />
            <property name="javax.persistence.jdbc.password" value="" />
            
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create" />
            <property name="show_sql" value="true"/>
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>
        </properties>
    </persistence-unit>
</persistence>